# ════════════════════════════════════════════════
# Application Configuration
# ════════════════════════════════════════════════

APP_NAME="LMS API"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# ════════════════════════════════════════════════
# Database Configuration (Multi-Tenant)
# ════════════════════════════════════════════════

# Central Database (Landlord)
DB_CONNECTION=mysql
DB_HOST_CENTRAL=127.0.0.1
DB_PORT_CENTRAL=3306
DB_DATABASE_CENTRAL=lms_central
DB_USERNAME_CENTRAL=root
DB_PASSWORD_CENTRAL=

# Tenant Databases
DB_HOST_TENANT=127.0.0.1
DB_PORT_TENANT=3306
DB_USERNAME_TENANT=root
DB_PASSWORD_TENANT=

# ════════════════════════════════════════════════
# Caching
# ════════════════════════════════════════════════

CACHE_STORE=redis
CACHE_PREFIX=lms_

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# ════════════════════════════════════════════════
# Queue Configuration
# ════════════════════════════════════════════════

QUEUE_CONNECTION=redis
REDIS_QUEUE_CONNECTION=default
REDIS_QUEUE=default

# ════════════════════════════════════════════════
# Session Configuration
# ════════════════════════════════════════════════

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ════════════════════════════════════════════════
# Logging
# ════════════════════════════════════════════════

LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ════════════════════════════════════════════════
# Mail Configuration
# ════════════════════════════════════════════════

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@lms.test"
MAIL_FROM_NAME="${APP_NAME}"

# ════════════════════════════════════════════════
# Laravel Sanctum
# ════════════════════════════════════════════════

SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000

# ════════════════════════════════════════════════
# Multi-Tenancy Configuration
# ════════════════════════════════════════════════

CENTRAL_DOMAINS=localhost,127.0.0.1,lms.test
TENANT_DATABASE_PREFIX=tenant_
TENANT_DATABASE_SUFFIX=

# ════════════════════════════════════════════════
# Payment Gateway Configuration
# ════════════════════════════════════════════════

PAYMENT_GATEWAY=fawry
PAYMENT_CURRENCY=EGP
PAYMENT_LOGGING_ENABLED=true

# Fawry
FAWRY_ENABLED=true
FAWRY_MERCHANT_ID=your_merchant_id
FAWRY_SECRET=your_secret_key
FAWRY_SANDBOX=true

# PayMob
PAYMOB_ENABLED=true
PAYMOB_API_KEY=your_api_key
PAYMOB_INTEGRATION_ID=your_integration_id
PAYMOB_HMAC_SECRET=your_hmac_secret
PAYMOB_SANDBOX=true
PAYMOB_IFRAME_URL=https://accept.paymob.com/api/acceptance/iframes/

# PayTabs
PAYTABS_ENABLED=true
PAYTABS_PROFILE_ID=your_profile_id
PAYTABS_SERVER_KEY=your_server_key
PAYTABS_REGION=egypt

# ════════════════════════════════════════════════
# Flutter App Configuration
# ════════════════════════════════════════════════

FLUTTER_SCHEME=lmsapp

# ════════════════════════════════════════════════
# File Storage (Spatie Media Library)
# ════════════════════════════════════════════════

FILESYSTEM_DISK=local
MEDIA_DISK=public

# AWS S3 (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ════════════════════════════════════════════════
# Video Hosting (Free Platforms)
# ════════════════════════════════════════════════

# YouTube API (Optional - for video validation)
YOUTUBE_API_KEY=

# Vimeo API (Optional)
VIMEO_CLIENT_ID=
VIMEO_CLIENT_SECRET=
VIMEO_ACCESS_TOKEN=

# ════════════════════════════════════════════════
# Development Tools
# ════════════════════════════════════════════════

TELESCOPE_ENABLED=true
DEBUGBAR_ENABLED=true
